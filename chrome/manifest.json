{
  "manifest_version": 3,
  "name": "Airflow Extension",
  "version": "1.7.1",
  "description": "Improve Airflow UI",

  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/logo.png"
  },

  "icons": {
    "128": "images/logo.png"
  },

  "permissions": ["activeTab", "scripting", "storage"],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
